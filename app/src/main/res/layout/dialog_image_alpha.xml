<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/widgetImageAlphaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="사진 불투명도 조절"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/widgetImageAlphaSeekbar"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/widgetImageAlphaTitle"
        app:layout_constraintBottom_toTopOf="@id/widgetImageAlphaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/widgetImageAlphaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="확인"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>