<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bottom.widget.WidgetFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/widgetTextBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/primaryColorLight"
            android:layout_marginStart="20dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/widgetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center"
                android:text='"명언을 설정해 주세요."'
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingStart="20dp"
                android:paddingTop="32dp"
                android:paddingEnd="20dp"
                android:paddingBottom="32dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/hintEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="터치해서 명언을 작성해보세요"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/widgetTextBackground"
            android:gravity="end"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/widgetColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="10dp"
            android:paddingEnd="24dp"
            android:paddingBottom="10dp"
            android:weightSum="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hintEditText">

            <TextView
                android:id="@+id/widgetTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/pretendard_medium"
                android:text="색상"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/backgroundColorBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backgroundColor"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_background_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="배경"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/textColorBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/textColor"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="글자"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/colorShadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_above="@id/widgetColor"
            android:background="@drawable/bac_shadow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/widgetColor" />

        <TextView
            android:id="@+id/widgetFragmentUpdateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/colorShadow"
            app:layout_constraintBottom_toTopOf="@id/buttonDecideWidget"
            android:text="업데이트 예정"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:gravity="center"/>





        <com.qpeterp.wising.ui.custom.CustomButtonView
            android:id="@+id/buttonDecideWidget"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:customTextColor="@color/white"
            app:customBgColor="@color/primaryColor"
            app:customTitle="적용하기"
            android:layout_marginBottom="18dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>