<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startSplashFragment">

    <fragment
        android:id="@+id/startSplashFragment"
        tools:layout="@layout/fragment_start_splash"
        android:label="startSplashFragment"
        android:name="com.qpeterp.wising.ui.StartSplashFragment" >

        <action
            android:id="@+id/action_startSplashFragment_to_startTermFragment"
            app:destination="@id/startTermFragment"
            app:launchSingleTop="true"/>
    </fragment>



    <fragment
        android:id="@+id/startTermFragment"
        tools:layout="@layout/fragment_start_term"
        android:label="startTermFragment"
        android:name="com.qpeterp.wising.ui.StartTermFragment">

        <action
            android:id="@+id/action_startTermFragment_to_checkPermissionFragment"
            app:destination="@id/checkPermissionFragment"/>
    </fragment>



    <dialog
        android:id="@+id/checkPermissionFragment"
        tools:layout="@layout/fragment_permission_check"
        android:label="permissionCheckFragment"
        android:name="com.qpeterp.wising.ui.PermissionCheckFragment">

        <action
            android:id="@+id/action_checkPermissionFragment_to_homeFragment"
            app:destination="@id/mainFragment"/>
    </dialog>



    <fragment
        android:id="@+id/mainFragment"
        tools:layout="@layout/fragment_main"
        android:label="homeFragment"
        android:name="com.qpeterp.wising.ui.MainFragment">
        <action
            android:id="@+id/action_widgetFragment_to_widgetDialogFragment"
            app:destination="@id/widgetDialogFragment"
            app:launchSingleTop="true"/>
    </fragment>


    <dialog
        android:id="@+id/widgetDialogFragment"
        tools:layout="@layout/dialog_wdiget"
        android:label="widgetDialogFragment"
        android:name="com.qpeterp.wising.ui.bottom.widget.WidgetDialogFragment"/>

</navigation>